<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.health.app.schedules.helper.ScheduleUserMapper">

    <!-- 사용자 ID로 부서 코드 조회 -->
    <select id="selectDepartmentCodeByUserId" parameterType="java.lang.Long" resultType="java.lang.String">
        SELECT department_code
        FROM users
        WHERE user_id = #{userId}
          AND use_yn = TRUE
    </select>

</mapper>
